<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        android:id="@+id/card_note_material"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        android:checkable="true"
        android:clickable="true"
        android:longClickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/card_color"
        app:cardUseCompatPadding="true"
        app:rippleColor="@android:color/transparent"
        app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium"
                android:textSize="19sp"
                android:text="Titolo"
                android:paddingTop="20dp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:id="@+id/tv_title3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:fontFamily="@font/futura_medium"
                android:textSize="15sp"
                android:text="Body"
                android:paddingTop="15dp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/text_color_secondary"
                android:id="@+id/tv_body3"
                app:layout_constraintTop_toBottomOf="@+id/tv_title3"
                app:layout_constraintStart_toStartOf="parent">

        </TextView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium"
                android:textSize="10sp"
                android:text="Data"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/opaqueTextColor"
                android:id="@+id/tv_data3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_body3">

        </TextView>
        <TextView
                android:id="@+id/tv_category3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura_medium"
                android:textSize="10sp"
                android:text="Category"
                android:paddingVertical="20dp"
                android:paddingHorizontal="15dp"
                android:textColor="@color/opaqueTextColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>